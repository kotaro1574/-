
  <% if current_user.likes?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :get }, url: unlike_user_path(id: current_user.id)) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build, url: likes_user_path(id: current_user.id), html: { method: :get }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
